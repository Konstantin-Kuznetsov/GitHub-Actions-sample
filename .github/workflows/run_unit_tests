name: PR_unit_tests

on:
  pull_request:
    branches:
      - main

jobs:
  run_unit-tests:
    name: Run unit tests on PR
    runs-on: ubuntu-20.04

    steps:
      - uses: actions/checkout@v1
      - uses: actions/setup-java@v1
        with: {java-version: 1.8}
      - name: run unit tests
        run: ./gradlew test --stacktrace
